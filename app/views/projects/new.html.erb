<div class="gym-new-background">
  <img src="http://cdn2.hubspot.net/hubfs/314186/Blog/Innovation_Abstract.png?t=1462519694935" />
</div>


<h1 id="new-project-title">Let's Get Started in Creating Your New VENTURE!</h1>

<div class="new-space">
  <li class="dot"></li>
  <li class="dot"></li>
  <li class="dot"></li>
  <li class="dot"></li>
  <li class="dot"></li>
</div>

<div class="project-info">
  <h2>Project Information</h2>

  <%= form_for @project do |f| %>
    <% if @project.errors.any? %>
      <% @project.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <% end %>
  <% end %>

  <div class="title-form">
    <%= f.text_field :name, placeholder: "Project Title" %>
  </div>

  <div class="description-form">
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: "Description of your project..." %>
  </div>
  <div class="funding-form">
    <%= f.label :funding_goal %><br>
    $<%= f.number_field :funding_goal, placeholder: "Set Funding Goal - $$$" %>
  </div>
  <div class="end-date-form">
    <%= f.label :end_date %><br>
    <%= f.date_field :end_date %>
  </div>
  <div class="media-form">
    <%= f.label :media_url %><br>
    <%= f.text_field :media_url %>
  </div>


  <div id="reward-container">
    <h2>Rewards</h2>

    <div class="rewardForm">

        <%= f.fields_for :rewards, Reward.new do |reward_fields| %>
          <%= render 'reward_fields', f: reward_fields %>
        <% end %>
        <%= link_to_add_association 'Add Another Reward', f, :rewards %>

    </div>
  </div>

  <div class="new-project-button">
    <%= f.submit %>
  </div>
<% end %>

</div>
