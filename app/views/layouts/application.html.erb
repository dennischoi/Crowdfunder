<!DOCTYPE html>
<html>
<head>
  <title>Gym</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav>
  <% if current_user %>
  <%= link_to "Logout", :logout, method: :delete %> | <%= link_to "Profile", user_path(current_user) %> | <%= link_to "Back", root_path %>
  <% else %>
    <%= link_to "Login", :login %> <%= link_to "Sign Up", new_user_path %>
  <% end %>
</nav>
<%= yield %>

</body>
</html>
