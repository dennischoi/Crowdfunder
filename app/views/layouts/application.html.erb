<!DOCTYPE html>
<html>
<head>
  <title>Gym</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class= "gym-navigation">
  <ul class = "gym-nav" id = "home-nav">
    <li class><%= link_to 'Home', root_url %></li>
    <li class>
      <% if current_user %>
      <%= link_to 'Create Project', new_project_path %>
      <% else %>
      <%= link_to 'Create Project', login_path, alert: "Must Log in to Create a Project" %>

      <% end %>
    </li>
    <!-- this must be fixed... its wrong -->
    <li class><a href = "/projects">View Project</a></li>

    <li class="gym-logging">
      <% if current_user %>
        <%= link_to 'Logout', logout_path, method: :delete %>
      <% else %>
        <%= link_to 'Login', login_path %>  <%= link_to 'Sign Up', new_user_path %>
      <% end %>
    </li>
  </ul>
</div>

</div>
<%= yield %>

</body>

<footer class="gym-footer">
    Copyright 2016
</footer>

</html>
