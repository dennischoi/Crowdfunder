<h1>Profile Edit</h1>

<%= form_for @user do |f| %>

  <div class="fields">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="fields">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
